<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_music_detail"
        android:fitsSystemWindows="true"
        android:id="@+id/rootContraint"
        android:layout_marginBottom="65dp"
        tools:context=".ui.fragment.discovery.MusicDetailFragment">

    <com.brins.lightmusic.ui.customview.FadingScrollView
            android:id="@+id/nestScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/coverMusicList"
                    android:transitionName="transitionImg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/common_margin_50"
                    android:layout_marginEnd="@dimen/common_margin_50"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_constraintDimensionRatio="1000:1020"
                    app:layout_collapseParallaxMultiplier="0.5"
                    android:src="@drawable/default_cover"
                    app:riv_corner_radius_bottom_left="@dimen/common_margin_150"
                    app:riv_corner_radius_bottom_right="@dimen/common_margin_150"
            />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/musicRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/common_margin_30"
                    android:layout_marginEnd="@dimen/common_margin_10"
                    android:layout_marginStart="@dimen/common_margin_10"
                    app:layout_constraintTop_toBottomOf="@id/coverMusicList">

            </androidx.recyclerview.widget.RecyclerView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.brins.lightmusic.ui.customview.FadingScrollView>

    <com.brins.lightmusic.ui.customview.CommonHeaderView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:chv_text_color="@color/translucent"
            app:chv_icon="@drawable/ic_back_black"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/gery"
            android:alpha="0"
            app:chv_title="">
    </com.brins.lightmusic.ui.customview.CommonHeaderView>
</androidx.constraintlayout.widget.ConstraintLayout>