<?xml version="1.0" encoding="utf-8"?>
<com.brins.lightmusic.ui.customview.RoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/common_margin_300"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/common_margin_60"
        app:round_corner="@dimen/common_margin_20">

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            app:riv_corner_radius="@dimen/common_margin_20" />

    <com.brins.lightmusic.ui.customview.FontTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_50"
            android:maxLines="1"
            android:textColor="@color/translucent"
            android:textSize="18sp"
            app:font_type="DIN-Bold"
            android:layout_marginTop="@dimen/common_margin_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cover" />

    <com.brins.lightmusic.ui.customview.FontTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_50"
            android:layout_marginTop="@dimen/common_margin_10"
            android:textColor="@color/translucent"
            android:textSize="12sp"
            app:font_type="DIN-Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />
</com.brins.lightmusic.ui.customview.RoundConstraintLayout>