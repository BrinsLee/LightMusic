<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main"
        android:fitsSystemWindows="true"
        android:id="@+id/drawer"
        tools:context=".ui.activity.MainActivity">
    <LinearLayout
            android:id="@+id/fragment_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/common_margin_80">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/alpha"
                app:layout_scrollFlags="scroll|enterAlways"
                app:titleTextColor="@android:color/white">
            <com.brins.lightmusic.ui.customview.FontTextView
                    android:id="@+id/tv_title"
                    android:text="@string/app_name"
                    app:start_color="@color/start"
                    app:end_color="@color/end"
                    app:font_type="DIN-Bold"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.Toolbar>
        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                app:tabGravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_height="30dp"
                app:tabMode="fixed"
                app:tabIndicatorHeight="0dp"
                app:tabTextColor="@color/white"
                app:tabSelectedTextColor="@color/white">
        </com.google.android.material.tabs.TabLayout>
        <com.brins.lightmusic.ui.customview.MainViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10">

        </com.brins.lightmusic.ui.customview.MainViewPager>
    </LinearLayout>
    <FrameLayout
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />
</androidx.constraintlayout.widget.ConstraintLayout>