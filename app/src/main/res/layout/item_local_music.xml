<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="410dp"
        android:layout_height="@dimen/common_margin_80">

    <ImageView
            android:id="@+id/imgCover"
            android:layout_margin="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/album"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <com.brins.lightmusic.ui.customview.FontTextView
            android:id="@+id/textViewName"
            android:textSize="18sp"
            android:maxLength="25"
            android:text="未知"
            android:textColor="@android:color/black"
            app:font_type="DIN-Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgCover"
            android:layout_marginTop="@dimen/common_margin_10"/>
    <com.brins.lightmusic.ui.customview.FontTextView
            android:id="@+id/textViewArtist"
            android:textSize="12sp"
            android:text="未知"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_10"
            android:layout_marginTop="@dimen/common_margin_10"
            app:layout_constraintStart_toEndOf="@id/imgCover"
            app:layout_constraintTop_toBottomOf="@id/textViewName"/>
    <com.brins.lightmusic.ui.customview.BaseLottieAnimationview
            app:lottie_fileName="lottie/play_item/music_items.json"
            app:lottie_loop="true"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
